<div class="map-container">
    <img src="{{ asset('/images/plan_camping_2020.png') }}" alt="Carte interactive"/>
    {% for one in coordonnee %}
    {% set blueForPmr = false %}
        {% for pmr in isPmr %}
            {% if pmr == one.idLocatifs.getId() %}
                {% set blueForPmr = true %}
            {% endif %}
        {% endfor %}
            {% if blueForPmr == false %}
                <svg data-id="{{ one.idLocatifs.getIdTypeLocatifs().getId() }}" data-locatif="{{ one.idLocatifs.getId}}" class="ping hidden" style="{{ one.position }}" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 384 512"><!--!Font Awesome Free 6.5.2 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2024 Fonticons, Inc.--><path fill="#c70000" d="M215.7 499.2C267 435 384 279.4 384 192C384 86 298 0 192 0S0 86 0 192c0 87.4 117 243 168.3 307.2c12.3 15.3 35.1 15.3 47.4 0zM192 128a64 64 0 1 1 0 128 64 64 0 1 1 0-128z"/></svg>
                
            {% else %}
                <svg data-id="{{ one.idLocatifs.getIdTypeLocatifs().getId() }}" class="ping hidden" style="{{ one.position }}" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 384 512"><!--!Font Awesome Free 6.5.2 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2024 Fonticons, Inc.--><path fill="#0F49E7" d="M215.7 499.2C267 435 384 279.4 384 192C384 86 298 0 192 0S0 86 0 192c0 87.4 117 243 168.3 307.2c12.3 15.3 35.1 15.3 47.4 0zM192 128a64 64 0 1 1 0 128 64 64 0 1 1 0-128z"/></svg>
            {% endif %}
        
    {% endfor %}
</div>
